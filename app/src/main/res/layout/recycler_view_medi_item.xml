<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerItem_layout_medicament"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="8dp"

    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="start"
    android:orientation="horizontal"

    android:paddingLeft="20dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imageView_recycler_medi_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pill_with_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_item_medicament_libelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/lightGray"
            android:text="libelle"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recycler_item_medicament_speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="specialitÃ©"
            android:textSize="14dp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>